
.show_box {
	position: absolute;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
	background-color: rgba(0, 0, 0, 0.7);
	z-index: 100;
}
.show_shoptype {
	height: 80%;
	width: 100%;
	background-color: #fff;
	position: absolute;
	bottom: 0;
	border-radius: 50rpx 50rpx 0 0;
	padding: 30rpx 30rpx 20rpx;
	box-sizing: border-box;
	overflow: hidden;
}
.firstbox image {
	width: 200rpx;
	height: 200rpx;
	margin-right: 40rpx;
}
.text_right {
	text-align: right;
}
.show_price {
	font-size: 38rpx;
	color: #FF0000;
	margin-bottom: 20rpx;
}
.scoll_box {
	overflow: auto;
	height: 614rpx;
}
.type_box {
	padding: 20rpx 0;
}
.selected_type {
	font-size: 24rpx;
	color: #333;
}
.type_title {
	font-size: 26rpx;
	color: #262626;
	font-weight: 600;
	margin-bottom: 20rpx;
}
.type_list text {
	display: inline-block;
	font-size: 24rpx;
	padding: 10rpx 20rpx;
	color: #262626;
	background-color: #f2f2f2;
	border-radius: 30rpx;
	margin-right: 20rpx;
}
.last_box {
	position: fixed;
	bottom: 0;
	left: 0;
	background-color: #fff;
	height: 100rpx;
	width: 100%;
	padding: 12rpx 20rpx;
	box-sizing: border-box;
}
.affirmbtn {
	height: 76rpx;
	border-radius: 50rpx;
	background-color: #FF0000;
	text-align: center;
	line-height: 76rpx;
	color: #fff;
}

